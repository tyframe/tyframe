{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES2015",
        "target": "ES2018",
        "sourceMap": true,
        "noEmitOnError": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "dist"]
}
