{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "moduleResolution": "Node",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "baseUrl": "packages",
        "paths": {
            "@tyframe/core": ["core/src"],
            "@tyframe/example": ["example/src"],
            "@tyframe/*": ["*/src"]
        }
    },
    "include": [
        "packages/**/*",
    ],
    "exclude": [
      "node_modules"
    ],
  }
